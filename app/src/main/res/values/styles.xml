<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextBorderStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_border</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorAccent">@color/text_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlActivated">@color/text_hint</item>

    </style>
</resources>
